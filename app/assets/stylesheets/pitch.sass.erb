.hero
  height: 480px
  width: 100%
  margin-left: 0px
  margin-right: 0px
  padding: 160px 0px 20px 0px
  text-align: center
  color: black
  .title
    font-weight: normal
    font-size: 54px
    padding-bottom: 0px
    margin-bottom: 0px

  .coming-soon
    font-weight: lighter
    padding-top: 0px
    margin-top: 0px

  .content
    font-size: 18px


.hero:after
  content: ""
  background: url(<%= asset_path 'photo.jpg' %>) no-repeat center center fixed
  opacity: 0.3
  top: 0
  left: 0
  bottom: 0
  right: 0
  position: absolute
  z-index: -1
  height: 480px


